android_app {
    name: "QuadDACPanel",

    srcs: [
        "src/org/lineageos/hardware/util/FileUtils.java",
        "src/org/lineageos/settings/device/dac/*.java",
        "src/org/lineageos/settings/device/dac/*/*.java",
    ],

    certificate: "platform",
    privileged: true,
    platform_apis: true,

    static_libs: [
        "androidx.core_core",
        "androidx.preference_preference",
        "androidx.appcompat_appcompat-resources",
        "vendor.lge.hardware.audio.dac.control-V1.0-java",
    ],

    resource_dirs: [
        "res",
    ],
}

